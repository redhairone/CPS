<Window x:Class="CPS.Zad4Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPS"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Zad4Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button 
            Content="Go" 
            Grid.Row="1" 
            VerticalAlignment="Bottom" 
            Margin="5,5,5,10" 
            Height="25" 
            Command="{Binding GenerateButtonPressed}"/>

        <TabControl Grid.Column="1">
            <TabItem Header="W1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <lvc:CartesianChart 
                            Grid.Row="0"
                            Series="{Binding W1TopChartSeries}" 
                            LegendLocation="Bottom" 
                            DisableAnimations="True" 
                            Hoverable="False" 
                            DataTooltip="{x:Null}"/>
                    <lvc:CartesianChart 
                            Grid.Row="1"
                            Series="{Binding W1BottomChartSeries}" 
                            LegendLocation="Bottom" 
                            DisableAnimations="True" 
                            Hoverable="False" 
                            DataTooltip="{x:Null}"/>
                </Grid>
            </TabItem>
            <TabItem Header="W2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <lvc:CartesianChart 
                            Grid.Row="0"
                            Series="{Binding W2TopChartSeries}" 
                            LegendLocation="Bottom" 
                            DisableAnimations="True" 
                            Hoverable="False" 
                            DataTooltip="{x:Null}"/>
                    <lvc:CartesianChart 
                            Grid.Row="1"
                            Series="{Binding W2BottomChartSeries}" 
                            LegendLocation="Bottom" 
                            DisableAnimations="True" 
                            Hoverable="False" 
                            DataTooltip="{x:Null}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
